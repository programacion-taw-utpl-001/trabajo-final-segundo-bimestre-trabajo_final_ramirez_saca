#LLamamos a la Opcion con el numero de valores a Operar
def numeroValores():
    bien = False
    n = 0
    while (not bien):
        try:
            n = int(input("ESCOJA UN NUMERO DE VALORES"))
            print("     ")
            bien = True
        except ValueError:
            print('Error, introduce un numero entero')

    return n



#Ordenamiento Por seleccion
def selectionsort(lista, tam):
    print("Arreglo Desordenado")
    print(lista)
    for i in range(0, tam - 1):
        min = i
        for j in range(i + 1, tam):
            if lista[min] > lista[j]:
                min = j
        aux = lista[min]
        lista[min] = lista[i]
        lista[i] = aux
    print ("Arreglo Ordenado")
    print lista


#Llamamos al tipo de Operacion



def tipoOperacion():
    correcto = False
    num = 0
    while (not correcto):
        try:
            num = int(input("ESCOJA UNA OPCION: "))
            print("     ")
            correcto = True
        except ValueError:
            print('Error, introduce un numero e2ntero')

    return num


